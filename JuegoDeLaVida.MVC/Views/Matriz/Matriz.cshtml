@model JuegoDeLaVida.MVC.Models.Matriz
@{
}
<h1>
    Juego de la vida
</h1>
<form method="post" asp-action="SiguienteGeneracion">
    <table>
        @for (int i = 0; i < @Model.Filas; i++)
        {
            <tr>
                @for (int j = 0; j < @Model.Columnas; j++)
                {
                    <td>
                        <h2>@Model.Matriz1[i,j]</h2>
                        @Html.HiddenFor(model=> model.Matriz1)
                    </td>
                }
            </tr>
        }
    </table>
    <div>
        @Html.LabelFor(model => model.Iteraciones)
        @Html.TextBoxFor(model => model.Iteraciones)
    </div>

    <div>
        <input type="submit" value="Numero de iteracion" />
    </div>
    
</form>










